<%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> User</legend>

    <%= f.input :email, input_html: {class: "avg"} %>
    <%= f.input :password, input_html: {class: "avg"} %>
    <%= f.input :password_confirmation, input_html: {class: "avg"} %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', employees_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>