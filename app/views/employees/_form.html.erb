<%= simple_form_for @employee, :html => { :class => 'form-horizontal' } do |employee_form| %>
<div class="row">
  <div class="span7">
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Employee</legend>
      <%= render :partial => "employee_fields", :locals => { :f => employee_form } %>
  </fieldset>
  </div>

  <div class="span5">
    <legend>User Info</legend>
      <div id="user_info">
        <%= employee_form.fields_for :user do |user_form| %>
          <%= render :partial => "user_fields", :locals => { :f => user_form } %>
        <% end %> 
        <p>
          <br /><%= employee_form.link_to_add("Create User", :user, :class => 'button tiny') %>
        </p>
      </div> 
    </div>
  </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', employees_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>